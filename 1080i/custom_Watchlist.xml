<?xml version="1.0" encoding="UTF-8"?>
<window id="63">
	<defaultcontrol always="true">52</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<!-- fanart -->
		<control type="image">
			<include>screen_Dimensions</include>
			<texture background="true">$INFO[Container(52).ListItem.Property(Fanart)]</texture>
			<include>transition_Fanart</include>
			<fadetime>fadetime_Fanart</fadetime>
			<visible>Control.HasFocus(52) + Skin.HasSetting(fanart.global) + !IsEmptyContainer(52).ListItem.Property(Fanart)) + ![Player.HasVideo + Skin.HasSetting(backgroundvideo.global)]</visible>
		</control>
		<!-- includes -->
		<include>global_Background</include>
		<include>global_Includes</include>
		<include>PageControls</include>
		<!-- window title -->
		<control type="label">
			<label>$LOCALIZE[20343] [COLOR=Color2]$LOCALIZE[31086][/COLOR]</label>
			<include>windowTitle</include>
			<visible>Skin.String(Watchlist,Shows)</visible>
		</control>
		<control type="label">
			<label>$LOCALIZE[342] [COLOR=Color2]$LOCALIZE[31086][/COLOR]</label>
			<include>windowTitle</include>
			<visible>Skin.String(Watchlist,Movies)</visible>
		</control>
		<!--slide -->
		<control type="group">
			<include>transition_Container</include>
			<include>toggle_Menu</include>
			<control type="fixedlist" id="52">
				<viewtype label="Slide">info</viewtype>
				<posx>-240</posx>
				<posy>150</posy>
				<width>2490</width>
				<height>638</height>
				<onup>6000</onup>
				<onleft>52</onleft>
				<onright>52</onright>
				<focusposition>2</focusposition>
				<scrolltime tween="Cubic" easing="Out">400</scrolltime>
				<orientation>horizontal</orientation>
				<include>transition_Container</include>
				<include>infoDialogHide</include>
				<include>toggle_Menu</include>
				<itemlayout condition="Skin.String(Watchlist,Movies) | Skin.String(Watchlist,Shows)" height="600" width="308">
					<control type="group">
						<control type="image">
							<width>342</width>
							<height>474</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<bordertexture border="40">frames/frame_Square.png</bordertexture>
							<aspectratio align="center">stretch</aspectratio>
							<bordersize>22</bordersize>
						</control>
						<control type="group">
							<posx>22</posx>
							<posy>22</posy>
							<visible>![IsEmpty(ListItem.Property(Latest1) | IsEmpty(ListItem.Property(Latest2) | IsEmpty(ListItem.Property(Latest3) | IsEmpty(ListItem.Property(Latest4)]</visible>
							<control type="image">
								<width>150</width>
								<height>216</height>
								<texture background="true">$INFO[ListItem.Property(Latest1)]</texture>
								<aspectratio align="center">stretch</aspectratio>
							</control>
							<control type="image">
								<posy>216</posy>
								<width>150</width>
								<height>216</height>
								<texture background="true">$INFO[ListItem.Property(Latest3)]</texture>
								<aspectratio align="center">stretch</aspectratio>
							</control>
							<control type="image">
								<posx>150</posx>
								<width>150</width>
								<height>216</height>
								<texture background="true">$INFO[ListItem.Property(Latest2)]</texture>
								<aspectratio align="center">stretch</aspectratio>
							</control>
							<control type="image">
								<posx>150</posx>
								<posy>216</posy>
								<width>150</width>
								<height>216</height>
								<texture background="true">$INFO[ListItem.Property(Latest4)]</texture>
								<aspectratio align="center">stretch</aspectratio>
							</control>
						</control>
						<control type="group">
							<posx>261</posx>
							<posy>393</posy>
							<control type="image">
								<include>overlay_UnWatched</include>
							</control>
							<control type="image">
								<width>48</width>
								<height>48</height>
								<texture>overlays/OverlayResumable.png</texture>
								<visible>SubString(ListItem.Property(Progress),True)</visible>
							</control>
						</control>
					</control>
				</itemlayout>
				<focusedlayout condition="Skin.String(Watchlist,Movies) | Skin.String(Watchlist,Shows)" height="600" width="308">
					<control type="group">
						<include>focus_SlidePoster</include>
						<control type="image">
							<width>342</width>
							<height>474</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<bordertexture border="40">frames/frame_Square.png</bordertexture>
							<aspectratio align="center">stretch</aspectratio>
							<bordersize>22</bordersize>
						</control>
						<control type="group">
							<posx>22</posx>
							<posy>22</posy>
							<visible>![IsEmpty(ListItem.Property(Latest1) | IsEmpty(ListItem.Property(Latest2) | IsEmpty(ListItem.Property(Latest3) | IsEmpty(ListItem.Property(Latest4)]</visible>
							<control type="image">
								<width>150</width>
								<height>216</height>
								<texture background="true">$INFO[ListItem.Property(Latest1)]</texture>
								<aspectratio align="center">stretch</aspectratio>
							</control>
							<control type="image">
								<posy>216</posy>
								<width>150</width>
								<height>216</height>
								<texture background="true">$INFO[ListItem.Property(Latest3)]</texture>
								<aspectratio align="center">stretch</aspectratio>
							</control>
							<control type="image">
								<posx>150</posx>
								<width>150</width>
								<height>216</height>
								<texture background="true">$INFO[ListItem.Property(Latest2)]</texture>
								<aspectratio align="center">stretch</aspectratio>
							</control>
							<control type="image">
								<posx>150</posx>
								<posy>216</posy>
								<width>150</width>
								<height>216</height>
								<texture background="true">$INFO[ListItem.Property(Latest4)]</texture>
								<aspectratio align="center">stretch</aspectratio>
							</control>
						</control>
						<control type="group">
							<posx>261</posx>
							<posy>393</posy>
							<control type="image">
								<include>overlay_UnWatched</include>
							</control>
							<control type="image">
								<width>48</width>
								<height>48</height>
								<texture>overlays/OverlayResumable.png</texture>
								<visible>SubString(ListItem.Property(Progress),True)</visible>
							</control>
						</control>
					</control>
				</focusedlayout>
				<include condition="Skin.String(Watchlist,Shows)">watchlist_Shows</include>
				<include condition="Skin.String(Watchlist,Movies)">watchlist_Movies</include>
			</control>
			<!-- info -->
			<control type="group">
				<!-- flags -->
				<control type="group">
					<posx>110</posx>
					<posy>750</posy>
					<control type="image">
						<width>192</width>
						<height>96</height>
						<aspectratio align="right">keep</aspectratio>
						<texture>$INFO[Container(52).Listitem.Property(Studio),flags/studios/,.png]</texture>
						<visible>Skin.String(Watchlist,Movies)</visible>
					</control>
					<control type="image">
						<width>192</width>
						<height>96</height>
						<aspectratio align="right">keep</aspectratio>
						<texture>$INFO[Container(52).Listitem.Property(Studio),flags/networks/,.png]</texture>
						<visible>Skin.String(Watchlist,Shows)</visible>
					</control>
				</control>
				<control type="group">
					<posx>350</posx>
					<posy>750</posy>					
					<control type="label">
						<width>1500</width>
						<label>$INFO[Container(52).ListItem(0).Label][COLOR=Color3]$INFO[Container(52).ListItem.Property(Title),: ][/COLOR]</label>
						<include>info_Title</include>
					</control>
					<control type="label">
						<posy>52</posy>
						<width>1500</width>
						<label>$INFO[Container(52).ListItem.Property(Node)]$INFO[Container(52).ListItem.Property(Year)]$INFO[Container(52).ListItem(0).Label2, • ]$INFO[Container(52).ListItem.Property(Genre), • ]</label>
						<include>info_Sub</include>
						<visible>Skin.String(Watchlist,Movies)</visible>
					</control>
					<control type="label">
						<posy>52</posy>
						<width>1500</width>
						<label>$INFO[Container(52).ListItem.Property(Node)]$INFO[Container(52).ListItem(0).Label2]</label>
						<include>info_Sub</include>
						<visible>Skin.String(Watchlist,Shows)</visible>
					</control>
					<control type="textbox">
						<posy>92</posy>
						<width>1250</width>
						<height>145</height>
						<label>$INFO[Container(52).ListItem.Property(Plot)]</label>
						<include>description_Small</include>
					</control>
					<control type="image">
						<posy>252</posy>
						<width>192</width>
						<height>48</height>
						<texture>$VAR[custom_Rating.Info]</texture>
						<aspectratio align="center">keep</aspectratio>
						<visible>IsEmpty(Container(52).ListItem.Property(Node))</visible>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>
